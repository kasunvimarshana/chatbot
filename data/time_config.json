        "12h": "%I:%M %p",
        "24h": "%H:%M",
        "verbose": "%I:%M:%S %p"
    },
    "timezone_aliases": {
        "london": "Europe/London",
        "paris": "Europe/Paris",
        "tokyo": "Asia/Tokyo",
        "new york": "America/New_York",
        "la": "America/Los_Angeles",
        "chicago": "America/Chicago"
    },
    "time_patterns": [
        "time( now)?",
        "what time is it",
        "current time",
        "what's the time",
        "do you have the time",
        "can you tell me the time",
        "what is the time"
    ],
    "response_templates": {
