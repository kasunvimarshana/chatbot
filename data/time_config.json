{
  "default_timezone": "UTC",
  "time_formats": {
    "12h": "%I:%M %p",
    "24h": "%H:%M",
    "verbose": "%I:%M:%S %p"
  },
  "timezone_aliases": {
    "colombo": "Asia/Colombo",
    "sri lanka": "Asia/Colombo",
    "kolkata": "Asia/Kolkata",
    "india": "Asia/Kolkata",
    "singapore": "Asia/Singapore",
    "hong kong": "Asia/Hong_Kong",
    "beijing": "Asia/Shanghai",
    "shanghai": "Asia/Shanghai",
    "london": "Europe/London",
    "paris": "Europe/Paris",
    "tokyo": "Asia/Tokyo",
    "new york": "America/New_York",
    "ny": "America/New_York",
    "la": "America/Los_Angeles",
    "los angeles": "America/Los_Angeles",
    "chicago": "America/Chicago",
    "pst": "America/Los_Angeles",
    "est": "America/New_York",
    "gmt": "Europe/London",
    "utc": "UTC"
  },
  "time_patterns": [
    "(?i)(what('?s| is) the )?time( now)?( in \\w+( \\w+)*)?",
    "(?i)(current|right now|what) time( is it)?",
    "(?i)do you (have|know) the time",
    "(?i)can you tell me (what('?s| is) )?the time",
    "(?i)how late is it",
    "(?i)what time do you have"
  ],
  "response_templates": {
    "time": [
      "The current time in {tz} is {time}",
      "It's {time} in {tz} right now",
      "Right now it's {time} in {tz}",
      "Clocks in {tz} show {time} currently",
      "{time} is the current time in {tz}",
      "According to my clock, it's {time} in {tz}"
    ],
    "timezone_errors": [
      "I don't recognize the timezone '{tz}'. Try 'EST' or 'London'.",
      "Sorry, I don't know the timezone '{tz}'. I know major cities like New York, London, or Tokyo.",
      "Timezone '{tz}' not found. Try one of these: {suggestions}",
      "I can't find '{tz}' in my database. Available timezones include: {suggestions}"
    ]
  }
}
